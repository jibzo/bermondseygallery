                </div>
              </div>
            {% endcomment %}
          </div>
        </div>
      </div>
    </div>
    <div>
      <p>
        <span x-show="!orderData & !error" class="text-gray-800 dark:text-white font-semibold leading-4 text-center ">
          Loading order data...
        </span>
        <span x-text="error"></span>
      </p>
    </div>
  </div>
</section>

<script>
  function orderStatus() {
    return {
      orderData: null,
      isLoading: false,
      formattedDate: null,
      urlParams: new URLSearchParams(window.location.search),
      error: null,
      getOrderIdFromUrl() {
        return this.urlParams.get('id');
      },
      getNumberIdFromUrl() {
        return this.urlParams.get('number');
      },
      fetchOrderStatus() {
        this.isLoading = true;
        this.error = null;
        let orderId = this.getOrderIdFromUrl();
        let numberId = this.getNumberIdFromUrl();

        fetch(`https://bermondseygallery-postgres.herokuapp.com/order-status/${orderId}/${numberId}`)
          .then((response) => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(({ data }) => {
            this.orderData = data;
            this.isLoading = false;

            this.formattedDate = new Date(this.orderData.published_at).toLocaleString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
            });
          })
          .catch((error) => {
            this.error = 'Failed to fetch order status';
            this.isLoading = false;
            console.error('Error:', error);
          });
      },
      init() {
        this.fetchOrderStatus();
      },
    };
  }
</script>

